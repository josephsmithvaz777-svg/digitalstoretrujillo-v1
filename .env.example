# Environment Variables para Coolify
# Copia este archivo a .env y configura tus valores reales

# Entorno
NODE_ENV=production

# MongoDB (desde Coolify o MongoDB Atlas)
MONGODB_URI=mongodb://username:password@mongodb:27017/digitalstore?authSource=admin
MONGODB_DB=digitalstore

# URL del sitio
PUBLIC_SITE_URL=https://tu-dominio.com

# Hotmart (para pagos)
HOTMART_API_KEY=tu_hotmart_api_key
HOTMART_CLIENT_ID=tu_hotmart_client_id
HOTMART_CLIENT_SECRET=tu_hotmart_client_secret
HOTMART_WEBHOOK_SECRET=tu_webhook_secret

# Crypto Payments (opcional)
CRYPTO_WALLET_ADDRESS=tu_wallet_address
CRYPTO_API_KEY=tu_crypto_api_key

# JWT para autenticación
JWT_SECRET=genera_un_string_aleatorio_muy_largo_y_seguro

# Email (para notificaciones de órdenes)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu_password_de_aplicacion
EMAIL_FROM=noreply@tu-dominio.com

# Cloudinary (opcional, para imágenes de productos)
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Configuración de la aplicación
MAX_FILE_SIZE=5242880
ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com
PORT=3000
