# Environment Variables para Dokploy
# Copia este archivo y configura tus valores reales

# Entorno
NODE_ENV=production

# Base de Datos (PostgreSQL desde Dokploy)
DATABASE_URL=postgresql://ecommerce_user:TU_PASSWORD@postgres:5432/ecommerce

# URL del sitio
PUBLIC_SITE_URL=https://tu-dominio.com

# Hotmart (si usas Hotmart para pagos)
HOTMART_API_KEY=tu_hotmart_api_key
HOTMART_CLIENT_ID=tu_hotmart_client_id
HOTMART_CLIENT_SECRET=tu_hotmart_client_secret
HOTMART_WEBHOOK_SECRET=tu_webhook_secret

# Stripe (si usas Stripe para pagos)
STRIPE_SECRET_KEY=sk_live_tu_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_tu_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_tu_webhook_secret

# JWT para autenticaci칩n
JWT_SECRET=genera_un_string_aleatorio_muy_largo_y_seguro

# Email (opcional, para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu_password_de_aplicacion

# Redis (opcional, para cache - si lo configuras en Dokploy)
REDIS_URL=redis://redis:6379

# Cloudinary (opcional, para almacenar im치genes de productos)
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Configuraci칩n de la aplicaci칩n
MAX_FILE_SIZE=5242880
ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com
