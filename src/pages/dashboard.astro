---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout title="Dashboard - DigitalStore">
    <div class="h-screen overflow-hidden flex">
        <!-- Sidebar -->
        <aside
            class="w-72 flex-none border-r border-slate-200 dark:border-slate-800 bg-white dark:bg-[#111418] flex flex-col justify-between z-30 hidden lg:flex shadow-[4px_0_24px_rgba(0,0,0,0.02)]"
        >
            <div class="flex flex-col h-full">
                <!-- Logo -->
                <div
                    class="h-20 flex items-center px-8 border-b border-slate-100 dark:border-slate-800/50"
                >
                    <div class="flex items-center gap-3">
                        <div class="bg-primary text-white p-1.5 rounded-lg">
                            <span class="material-symbols-outlined text-[24px]"
                                >grid_view</span
                            >
                        </div>
                        <span
                            class="text-xl font-bold tracking-tight text-slate-900 dark:text-white"
                        >
                            Seller<span class="text-primary">Hub</span>
                        </span>
                    </div>
                </div>

                <!-- User Profile -->
                <div class="px-6 py-8">
                    <div
                        class="flex items-center gap-4 p-4 rounded-2xl bg-slate-50 dark:bg-slate-800/50 border border-slate-100 dark:border-slate-700/50"
                    >
                        <div
                            class="bg-primary text-white rounded-full h-12 w-12 flex items-center justify-center font-bold text-lg"
                        >
                            A
                        </div>
                        <div class="flex flex-col overflow-hidden">
                            <h3
                                class="text-sm font-bold text-slate-900 dark:text-white truncate"
                            >
                                Admin Usuario
                            </h3>
                            <p
                                class="text-xs text-slate-500 dark:text-slate-400 font-medium"
                            >
                                Vendedor Pro
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Navigation -->
                <nav class="flex-1 px-4 flex flex-col gap-1.5 overflow-y-auto">
                    <p
                        class="px-4 text-xs font-semibold text-slate-400 dark:text-slate-500 uppercase tracking-wider mb-2 mt-2"
                    >
                        Menú
                    </p>

                    <a
                        class="flex items-center gap-3 px-4 py-3 rounded-xl bg-primary text-white shadow-glow transition-all"
                        href="/dashboard"
                    >
                        <span class="material-symbols-outlined text-[22px]"
                            >dashboard</span
                        >
                        <span class="text-sm font-medium">Dashboard</span>
                    </a>

                    <a
                        class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors group"
                        href="/dashboard/ordenes"
                    >
                        <span
                            class="material-symbols-outlined text-[22px] group-hover:text-primary transition-colors"
                            >receipt_long</span
                        >
                        <span class="text-sm font-medium">Órdenes</span>
                    </a>

                    <a
                        class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors group"
                        href="/dashboard/productos"
                    >
                        <span
                            class="material-symbols-outlined text-[22px] group-hover:text-primary transition-colors"
                            >inventory_2</span
                        >
                        <span class="text-sm font-medium">Productos</span>
                    </a>

                    <a
                        class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors group"
                        href="/dashboard/clientes"
                    >
                        <span
                            class="material-symbols-outlined text-[22px] group-hover:text-primary transition-colors"
                            >group</span
                        >
                        <span class="text-sm font-medium">Clientes</span>
                    </a>

                    <p
                        class="px-4 text-xs font-semibold text-slate-400 dark:text-slate-500 uppercase tracking-wider mb-2 mt-6"
                    >
                        Sistema
                    </p>

                    <a
                        class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors group"
                        href="/dashboard/configuracion"
                    >
                        <span
                            class="material-symbols-outlined text-[22px] group-hover:text-primary transition-colors"
                            >settings</span
                        >
                        <span class="text-sm font-medium">Configuración</span>
                    </a>

                    <a
                        class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors group"
                        href="#"
                    >
                        <span
                            class="material-symbols-outlined text-[22px] group-hover:text-primary transition-colors"
                            >help</span
                        >
                        <span class="text-sm font-medium">Centro de Ayuda</span>
                    </a>
                </nav>

                <!-- Logout -->
                <div
                    class="p-4 border-t border-slate-200 dark:border-slate-800"
                >
                    <button
                        class="flex items-center gap-3 px-4 py-3 rounded-xl text-red-500 hover:bg-red-50 dark:hover:bg-red-900/10 transition-colors w-full"
                    >
                        <span class="material-symbols-outlined text-[22px]"
                            >logout</span
                        >
                        <span class="text-sm font-medium">Cerrar Sesión</span>
                    </button>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 flex flex-col h-full overflow-hidden relative">
            <!-- Mobile Header -->
            <header
                class="lg:hidden flex items-center justify-between p-4 bg-white dark:bg-[#111418] border-b border-slate-200 dark:border-slate-800 sticky top-0 z-20"
            >
                <div class="flex items-center gap-2">
                    <div class="bg-primary text-white p-1 rounded">
                        <span class="material-symbols-outlined text-sm"
                            >grid_view</span
                        >
                    </div>
                    <h1 class="font-bold text-lg dark:text-white">
                        Seller Hub
                    </h1>
                </div>
                <button
                    class="p-2 rounded-lg text-slate-500 hover:bg-slate-100 dark:hover:bg-slate-800"
                >
                    <span class="material-symbols-outlined">menu</span>
                </button>
            </header>

            <!-- Dashboard Content -->
            <div
                class="flex-1 overflow-y-auto bg-background-light dark:bg-background-dark"
            >
                <div class="max-w-7xl mx-auto p-4 md:p-8 flex flex-col gap-8">
                    <!-- Header -->
                    <div
                        class="flex flex-col sm:flex-row sm:items-center justify-between gap-4"
                    >
                        <div>
                            <h1
                                class="text-2xl md:text-3xl font-extrabold text-slate-900 dark:text-white tracking-tight"
                            >
                                Dashboard General
                            </h1>
                            <p class="text-slate-500 dark:text-slate-400 mt-1">
                                Bienvenido de vuelta, aquí está lo que está
                                pasando con tu tienda hoy.
                            </p>
                        </div>
                        <div class="flex items-center gap-3">
                            <span
                                class="text-xs font-semibold text-slate-500 bg-white dark:bg-slate-800 px-3 py-1.5 rounded-lg border border-slate-200 dark:border-slate-700"
                            >
                                Últimos 30 Días
                            </span>
                            <button
                                class="bg-slate-900 dark:bg-white text-white dark:text-slate-900 px-4 py-2 rounded-lg text-sm font-bold shadow-lg shadow-slate-900/20 hover:opacity-90 transition-opacity flex items-center gap-2"
                            >
                                <span
                                    class="material-symbols-outlined text-[18px]"
                                    >add</span
                                >
                                Nuevo Producto
                            </button>
                        </div>
                    </div>

                    <!-- Stats Cards -->
                    <div
                        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4"
                    >
                        <!-- Total Revenue -->
                        <div
                            class="bg-white dark:bg-card-dark p-5 rounded-2xl shadow-soft border border-slate-100 dark:border-slate-700/50 group hover:border-primary/50 transition-colors cursor-default"
                        >
                            <div class="flex justify-between items-start mb-4">
                                <div
                                    class="p-2.5 rounded-xl bg-blue-50 text-blue-600 dark:bg-blue-900/20 dark:text-blue-400"
                                >
                                    <span class="material-symbols-outlined"
                                        >attach_money</span
                                    >
                                </div>
                                <span
                                    class="inline-flex items-center px-2 py-0.5 rounded text-xs font-bold bg-green-50 text-green-600 dark:bg-green-900/30 dark:text-green-400"
                                >
                                    +12%
                                </span>
                            </div>
                            <p
                                class="text-slate-500 dark:text-slate-400 text-sm font-medium"
                            >
                                Ingresos Totales
                            </p>
                            <h3
                                class="text-2xl font-bold text-slate-900 dark:text-white mt-1"
                            >
                                $24,500
                            </h3>
                        </div>

                        <!-- Active Subscribers -->
                        <div
                            class="bg-white dark:bg-card-dark p-5 rounded-2xl shadow-soft border border-slate-100 dark:border-slate-700/50 group hover:border-primary/50 transition-colors cursor-default"
                        >
                            <div class="flex justify-between items-start mb-4">
                                <div
                                    class="p-2.5 rounded-xl bg-indigo-50 text-indigo-600 dark:bg-indigo-900/20 dark:text-indigo-400"
                                >
                                    <span class="material-symbols-outlined"
                                        >groups</span
                                    >
                                </div>
                                <span
                                    class="inline-flex items-center px-2 py-0.5 rounded text-xs font-bold bg-green-50 text-green-600 dark:bg-green-900/30 dark:text-green-400"
                                >
                                    +5%
                                </span>
                            </div>
                            <p
                                class="text-slate-500 dark:text-slate-400 text-sm font-medium"
                            >
                                Suscriptores Activos
                            </p>
                            <h3
                                class="text-2xl font-bold text-slate-900 dark:text-white mt-1"
                            >
                                843
                            </h3>
                        </div>

                        <!-- Hotmart Sales -->
                        <div
                            class="bg-white dark:bg-card-dark p-5 rounded-2xl shadow-soft border border-slate-100 dark:border-slate-700/50 group hover:border-primary/50 transition-colors cursor-default"
                        >
                            <div class="flex justify-between items-start mb-4">
                                <div
                                    class="p-2.5 rounded-xl bg-orange-50 text-orange-600 dark:bg-orange-900/20 dark:text-orange-400"
                                >
                                    <span class="material-symbols-outlined"
                                        >local_fire_department</span
                                    >
                                </div>
                                <span
                                    class="inline-flex items-center px-2 py-0.5 rounded text-xs font-bold bg-slate-100 text-slate-600 dark:bg-slate-700 dark:text-slate-400"
                                >
                                    0%
                                </span>
                            </div>
                            <p
                                class="text-slate-500 dark:text-slate-400 text-sm font-medium"
                            >
                                Ventas Hotmart
                            </p>
                            <h3
                                class="text-2xl font-bold text-slate-900 dark:text-white mt-1"
                            >
                                $16,300
                            </h3>
                        </div>

                        <!-- Crypto Sales -->
                        <div
                            class="bg-white dark:bg-card-dark p-5 rounded-2xl shadow-soft border border-slate-100 dark:border-slate-700/50 group hover:border-primary/50 transition-colors cursor-default"
                        >
                            <div class="flex justify-between items-start mb-4">
                                <div
                                    class="p-2.5 rounded-xl bg-purple-50 text-purple-600 dark:bg-purple-900/20 dark:text-purple-400"
                                >
                                    <span class="material-symbols-outlined"
                                        >currency_bitcoin</span
                                    >
                                </div>
                                <span
                                    class="inline-flex items-center px-2 py-0.5 rounded text-xs font-bold bg-green-50 text-green-600 dark:bg-green-900/30 dark:text-green-400"
                                >
                                    +25%
                                </span>
                            </div>
                            <p
                                class="text-slate-500 dark:text-slate-400 text-sm font-medium"
                            >
                                Ventas Crypto
                            </p>
                            <h3
                                class="text-2xl font-bold text-slate-900 dark:text-white mt-1"
                            >
                                $8,200
                            </h3>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="flex flex-col gap-4">
                        <h3
                            class="text-lg font-bold text-slate-900 dark:text-white flex items-center gap-2"
                        >
                            <span class="material-symbols-outlined text-primary"
                                >bolt</span
                            >
                            Acciones Rápidas
                        </h3>
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                            <button
                                class="bg-white dark:bg-card-dark p-4 rounded-xl shadow-sm border border-slate-100 dark:border-slate-700/50 hover:shadow-md hover:-translate-y-0.5 transition-all text-left flex flex-col gap-3 group"
                            >
                                <div
                                    class="w-10 h-10 rounded-full bg-blue-50 dark:bg-blue-900/20 flex items-center justify-center text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-colors"
                                >
                                    <span class="material-symbols-outlined"
                                        >add_box</span
                                    >
                                </div>
                                <div>
                                    <span
                                        class="block text-sm font-bold text-slate-900 dark:text-white"
                                        >Agregar Producto</span
                                    >
                                    <span
                                        class="text-xs text-slate-500 dark:text-slate-400"
                                        >Crear nuevo listado</span
                                    >
                                </div>
                            </button>

                            <button
                                class="bg-white dark:bg-card-dark p-4 rounded-xl shadow-sm border border-slate-100 dark:border-slate-700/50 hover:shadow-md hover:-translate-y-0.5 transition-all text-left flex flex-col gap-3 group"
                            >
                                <div
                                    class="w-10 h-10 rounded-full bg-indigo-50 dark:bg-indigo-900/20 flex items-center justify-center text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition-colors"
                                >
                                    <span class="material-symbols-outlined"
                                        >manage_accounts</span
                                    >
                                </div>
                                <div>
                                    <span
                                        class="block text-sm font-bold text-slate-900 dark:text-white"
                                        >Gestionar Clientes</span
                                    >
                                    <span
                                        class="text-xs text-slate-500 dark:text-slate-400"
                                        >Ver lista de suscriptores</span
                                    >
                                </div>
                            </button>

                            <button
                                class="bg-white dark:bg-card-dark p-4 rounded-xl shadow-sm border border-slate-100 dark:border-slate-700/50 hover:shadow-md hover:-translate-y-0.5 transition-all text-left flex flex-col gap-3 group"
                            >
                                <div
                                    class="w-10 h-10 rounded-full bg-orange-50 dark:bg-orange-900/20 flex items-center justify-center text-orange-600 group-hover:bg-orange-600 group-hover:text-white transition-colors"
                                >
                                    <span class="material-symbols-outlined"
                                        >analytics</span
                                    >
                                </div>
                                <div>
                                    <span
                                        class="block text-sm font-bold text-slate-900 dark:text-white"
                                        >Reporte de Ventas</span
                                    >
                                    <span
                                        class="text-xs text-slate-500 dark:text-slate-400"
                                        >Descargar CSV/PDF</span
                                    >
                                </div>
                            </button>

                            <button
                                class="bg-white dark:bg-card-dark p-4 rounded-xl shadow-sm border border-slate-100 dark:border-slate-700/50 hover:shadow-md hover:-translate-y-0.5 transition-all text-left flex flex-col gap-3 group"
                            >
                                <div
                                    class="w-10 h-10 rounded-full bg-green-50 dark:bg-green-900/20 flex items-center justify-center text-green-600 group-hover:bg-green-600 group-hover:text-white transition-colors"
                                >
                                    <span class="material-symbols-outlined"
                                        >settings_suggest</span
                                    >
                                </div>
                                <div>
                                    <span
                                        class="block text-sm font-bold text-slate-900 dark:text-white"
                                        >Configuración</span
                                    >
                                    <span
                                        class="text-xs text-slate-500 dark:text-slate-400"
                                        >Configurar pagos</span
                                    >
                                </div>
                            </button>
                        </div>
                    </div>

                    <!-- Recent Activity -->
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                        <div class="lg:col-span-2">
                            <div class="flex items-center justify-between mb-4">
                                <h3
                                    class="text-lg font-bold text-slate-900 dark:text-white"
                                >
                                    Suscripciones Recientes
                                </h3>
                                <a
                                    class="text-sm font-medium text-primary hover:text-primary-dark transition-colors"
                                    href="#">Ver Todas</a
                                >
                            </div>
                            <div class="flex flex-col gap-3">
                                <!-- Subscription Item -->
                                <div
                                    class="bg-white dark:bg-card-dark p-4 rounded-xl shadow-sm border border-slate-100 dark:border-slate-700/50 flex items-center justify-between hover:shadow-md transition-shadow"
                                >
                                    <div class="flex items-center gap-4">
                                        <div
                                            class="w-12 h-12 rounded-full bg-primary text-white flex items-center justify-center font-bold"
                                        >
                                            JL
                                        </div>
                                        <div>
                                            <h4
                                                class="text-sm font-bold text-slate-900 dark:text-white"
                                            >
                                                James L.
                                            </h4>
                                            <div
                                                class="flex items-center gap-2 mt-0.5"
                                            >
                                                <span
                                                    class="text-xs font-medium text-slate-500 dark:text-slate-400"
                                                    >Premium Bundle</span
                                                >
                                                <span
                                                    class="w-1 h-1 rounded-full bg-slate-300 dark:bg-slate-600"
                                                ></span>
                                                <span
                                                    class="flex items-center gap-1 text-[10px] font-semibold text-purple-600 dark:text-purple-400 bg-purple-50 dark:bg-purple-900/20 px-1.5 py-0.5 rounded"
                                                >
                                                    <span
                                                        class="material-symbols-outlined text-[10px]"
                                                        >currency_bitcoin</span
                                                    > Crypto
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <p
                                            class="text-sm font-bold text-slate-900 dark:text-white"
                                        >
                                            $129.00
                                        </p>
                                        <p class="text-xs text-slate-400">
                                            Oct 24, 2023
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Activity Log -->
                        <div
                            class="bg-white dark:bg-card-dark p-6 rounded-2xl shadow-soft border border-slate-100 dark:border-slate-700/50"
                        >
                            <h3
                                class="text-sm font-bold text-slate-900 dark:text-white uppercase tracking-wider mb-4 text-xs text-slate-500"
                            >
                                Registro de Actividad
                            </h3>
                            <div class="flex flex-col gap-4">
                                <div class="flex gap-3">
                                    <div
                                        class="mt-1 w-2 h-2 rounded-full bg-green-500 shrink-0"
                                    >
                                    </div>
                                    <div class="flex flex-col">
                                        <span
                                            class="text-sm font-medium text-slate-900 dark:text-white"
                                            >Nueva suscripción de Alex D.</span
                                        >
                                        <span class="text-xs text-slate-500"
                                            >Hace 2 minutos</span
                                        >
                                    </div>
                                </div>
                                <div class="flex gap-3">
                                    <div
                                        class="mt-1 w-2 h-2 rounded-full bg-blue-500 shrink-0"
                                    >
                                    </div>
                                    <div class="flex flex-col">
                                        <span
                                            class="text-sm font-medium text-slate-900 dark:text-white"
                                            >Producto "Marketing" actualizado</span
                                        >
                                        <span class="text-xs text-slate-500"
                                            >Hace 1 hora</span
                                        >
                                    </div>
                                </div>
                                <div class="flex gap-3">
                                    <div
                                        class="mt-1 w-2 h-2 rounded-full bg-red-500 shrink-0"
                                    >
                                    </div>
                                    <div class="flex flex-col">
                                        <span
                                            class="text-sm font-medium text-slate-900 dark:text-white"
                                            >Pago fallido (Usuario #821)</span
                                        >
                                        <span class="text-xs text-slate-500"
                                            >Hace 3 horas</span
                                        >
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</Layout>
